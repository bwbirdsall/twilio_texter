<h1>New Message</h1>


<% if @message.errors.any? %>
  <h3>The following errors occured: </h3>
  <ul>
    <% @message.errors.full_messages.each do |error_message| %>
      <li><%= error_message %></li>
    <% end %>
  </ul>
<% end %>

<div class="form">
  <%= form_for @message, :remote => true do |f| %>
    <% @child_index = Time.now.to_i %>
    <div class="form-group recipient_area">
      <%= render :partial => 'recipient_form', locals: {f: f, :child_index => @child_index, :message => @message }%>
    </div>
      <%= link_to "Add another recipient", "#", :class => 'add_more_thru_ajax' %>
    <div class="form-group">
      <%= f.label :from %>
     <%= f.collection_select :from, @contacts, :phone, :name, :class => 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, :class => 'form-control' %>
    </div>
    <%= f.submit :class => 'btn btn-danger' %>

  <% end %>
</div>
<br/>
<p><%= link_to "See your contacts", contacts_path, :class => 'btn btn-info' %></p>
