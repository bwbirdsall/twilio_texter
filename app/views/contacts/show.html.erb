<h1><%= @contact.name %></h1>

<p>Phone number: <%= Phone.format(@contact.phone) %></p>

<p><%= link_to "Edit this contact", edit_contact_path(@contact), :class => 'btn btn-warning' %></p>

<p><%= link_to "Delete this contact", contact_path(@contact), :class => 'btn btn-danger', :data => { :confirm => "Are you sure you want to delete #{@contact.name}?", :method => 'delete'} %></p>


